/* DEFAULT style for text on the survey page -- TD is used because all text on the page is within a table cell. */

td { font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 10pt; }

/* styles set for survey questions */

.heading { font-family: Arial, Helvetica, sans-serif; font-size: 11pt; font-weight: bold; color: #999999 }
.keyWords { FONT-WEIGHT: bold }
.keyPhrase { FONT-WEIGHT: bold; FONT-STYLE: italic }
.definition { FONT-SIZE: 11pt; FONT-STYLE: italic; FONT-FAMILY: Arial, Helvetica, sans-serif }
.preserve { white-space: pre }
.subQ { margin-left: 3ex; font-size: 8pt }
.bold { FONT-WEIGHT: bold; }
.itemID { text-align: right; margin-bottom: 1px; margin-top: 2px; font-family: Arial, Helvetica, sans-serif; font-size: 5pt;font-style:italic }
.groupInstruct { margin-top: 20px; font-weight: bold; font-size: 10pt;  }
.vignette { font-size: 12pt; font-family: Times, serif; }

